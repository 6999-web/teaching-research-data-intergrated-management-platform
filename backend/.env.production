# Production Environment Configuration
# 生产环境配置文件

# ============================================
# Database Configuration (数据库配置)
# ============================================
POSTGRES_SERVER=postgres
POSTGRES_USER=teaching_office_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_DB=teaching_office_evaluation_prod
POSTGRES_PORT=5432

# ============================================
# MinIO Object Storage (MinIO对象存储)
# ============================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=CHANGE_THIS_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_THIS_MINIO_SECRET_KEY
MINIO_BUCKET=teaching-office-attachments-prod
MINIO_SECURE=true

# ============================================
# JWT Authentication (JWT认证)
# ============================================
# Generate a strong secret key using: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_KEY_MINIMUM_32_CHARACTERS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============================================
# DeepSeek API (DeepSeek API配置)
# ============================================
DEEPSEEK_API_KEY=your-production-deepseek-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions

# ============================================
# CORS Configuration (跨域配置)
# ============================================
BACKEND_CORS_ORIGINS=["https://your-production-domain.com"]

# ============================================
# Application Configuration (应用配置)
# ============================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# HTTPS Configuration (HTTPS配置)
# ============================================
SSL_CERT_PATH=/etc/ssl/certs/teaching-office.crt
SSL_KEY_PATH=/etc/ssl/private/teaching-office.key

# ============================================
# Backup Configuration (备份配置)
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=teaching-office-backups
BACKUP_S3_REGION=us-east-1

# ============================================
# Performance Configuration (性能配置)
# ============================================
WORKERS=4
MAX_CONNECTIONS=100
POOL_SIZE=20
MAX_OVERFLOW=10

# ============================================
# Security Configuration (安全配置)
# ============================================
ALLOWED_HOSTS=["your-production-domain.com"]
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
